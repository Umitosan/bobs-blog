<div class="row">
  <div class="col-md-6">
    <h2>Blog Posts</h2>

    <ul>
      {{#each model as |post|}}
        {{post-tile post=post}}
      {{/each}}
    </ul>

  </div>
  <div class="col-md-6">
    <h2>Write New Post</h2>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title">
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        <textarea type="textarea" name="body"></textarea>
      </div>
      <button type="button" name="button">Post</button>
    </form>
  </div>
</div>
